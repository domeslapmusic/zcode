<IfModule mod_rewrite.c>

Options +FollowSymLinks
RewriteEngine On
RewriteBase /

Options -Indexes

RewriteRule ^(.*/)?\.svn/ - [F,L]
ErrorDocument 403 "Access Forbidden

# Need to keep supporting old English zlog url
RewriteRule ^proyectos/zlog/index_en.htm$ projects/zlog/

# Also need to keep supporting old v2 urls. I handle them here
# and not inside CodeIgniter because i'd have to enable query strings
# in urls and that's no good!
RewriteRule ^v2/* oldsite.php

# Moving articles from the website to the blog
redirect 301 /articulos/shared_fonts http://blog.zarate.tv/articles/shared-fonts-today/
redirect 301 /articulos/shared_fonts/index.php http://blog.zarate.tv/articles/shared-fonts-today/
redirect 301 /articulos/delegando-que-es-gerundio http://blog.zarate.tv/articles/delegando-que-es-gerundio/
redirect 301 /articulos/flash_libre_facil http://blog.zarate.tv/articles/flash-libre-facil/
redirect 301 /articulos/instancias-dinamicamente http://blog.zarate.tv/articles/crear-instancias-de-clases-dinamicamente/
redirect 301 /articulos/cargar-clases-dinamicamente http://blog.zarate.tv/articles/cargar-clases-dinamicamente/
redirect 301 /articulos/flash-para-barrapunteros-como-tu http://blog.zarate.tv/articles/flash-para-barrapunteros-como-tu/

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond $1 !^(assets)
RewriteRule ^(.*)$ index.php?/$1 [L]

</IfModule>

<IfModule !mod_rewrite.c>
# If we don't have mod_rewrite installed, all 404's
# can be sent to index.php, and everything works as normal.
# Submitted by: ElliotHaughin

ErrorDocument 404 /index.php
</IfModule> 